<!-- link the head part with another ejs  -->
<%- include('./fragments/head.ejs') %>

<body>
    <!-- link the navigation part with another ejs  -->
    <%- include('./fragments/navigation.ejs') %>

    <div class="container">
        <div class="row">
            <% for(let prod of products){%>
            <div class="col-sm-4">
                <div class="panel panel-info">
                    <div class="panel-heading"><%= prod.title%> - $<%= prod.price%></div>
                    <div class="panel-body"><img src="<%= prod.imageURL%>" class="img-responsive" style="width:100%"
                            alt="Image"></div>
                    <div class="panel-footer">
                        <a class="btn btn-info" href="/products/<%= prod._id%>" role="button">View Detail</a>
                        <a class="btn btn-info" href="/editProduct/<%= prod._id%>" role="button">Edit</a><br><br>
                        <form action="/delete" method="post">
                            <input type="hidden" name="_id" value="<%= prod._id%>">
                            <button type="submit" class="btn btn-info">DELETE</button>
                        </form>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div><br>

    <!-- link the footer part with another ejs  -->
    <%- include('./fragments/end.ejs') %>