<!-- link the head part with another ejs  -->
<%- include('./fragments/head.ejs') %>

<body>

    <!-- link the navigation part with another ejs  -->
    <%- include('./fragments/navigation.ejs') %>

    <div class="signin-form">
        <form action="/signin" method="post">
            <h2>Sign In</h2>
            <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="role" placeholder="role" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block">LogIn</button>
            </div>
        </form>
    </div>

    <!-- link the footer part with another ejs  -->
    <%- include('./fragments/end.ejs') %>